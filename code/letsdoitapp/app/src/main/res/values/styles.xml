<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="viewCustom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="textviewCustom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/custom_background</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/black</item>
        <!-- To remove divider of the number picker -->
        <item name="colorControlNormal">@android:color/transparent</item>
        <!--<item name="colorControlNormal">@color/gray_dark</item>-->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/gray_light</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="OutlinedEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:hint">@string/email</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="boxStrokeColor">@color/gray_dark</item>
    </style>


</resources>