    </LinearLayout>


    <TextView
        android:id="@+id/tvUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="@string/user"
        android:textColor="@color/gray_dark"/>

    <TextView
        android:id="@+id/tvHi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="@string/nav_hi"
        android:textColor="@color/gray_dark"/>

</LinearLayout>